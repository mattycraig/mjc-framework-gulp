//- -----------------------------------------------------------------|
//- DEV MIXINS
//- -----------------------------------------------------------------|
//- Contains the template for outputting comments in our partials and components.

//-  DEV HEAD MIXIN
//- -----------------------------------------------------------------|
mixin devHead(name, subfolder)
	- var subfolder = subfolder || ''
	- var url = '/dev/components' + subfolder + '/_' + name + '.html'
	= '\n'
	- if (global.devEnv)
		| <!-- BEGIN COMPONENT: #{name.toUpperCase()} -->
		| <!-- #{url} -->
	- else
		| <!-- BEGIN COMPONENT: #{name.toUpperCase()} -->


//-  DEV FOOT MIXIN
//- -----------------------------------------------------------------|
mixin devFoot(name, subfolder)
	- var subfolder = subfolder || ''
	= '\n'
	| <!-- END COMPONENT: #{name.toUpperCase()} -->
	= '\n'
